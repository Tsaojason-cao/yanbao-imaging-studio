<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:layout_margin="8dp">

    <!-- 照片缩略图 -->
    <ImageView
        android:id="@+id/photoThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photo_thumbnail" />

    <!-- 库洛米水印 -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/watermark_background">

        <ImageView
            android:id="@+id/watermarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/kuromi_avatar"
            android:contentDescription="@string/watermark" />

    </FrameLayout>

    <!-- 照片信息覆盖层 (点击时显示) -->
    <LinearLayout
        android:id="@+id/photoInfoOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="#00000080"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/photoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024-01-18 12:30:45"
            android:textSize="10sp"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/photoParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="参数: 感光度 100, 对比度 50"
            android:textSize="9sp"
            android:textColor="@color/text_light"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"
                android:scaleType="centerInside"
                android:tint="@color/text_white"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/share"
                android:scaleType="centerInside"
                android:tint="@color/text_white"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_sliders"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"
                android:scaleType="centerInside"
                android:tint="@color/text_white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
