<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep_purple">

    <!-- 相机预览 -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview_ai"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 扫描线动画 -->
    <View
        android:id="@+id/scan_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/kuromi_pink" />

    <!-- 玻璃拟态面板 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin_global"
        style="@style/KuromiCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_card">

            <TextView
                style="@style/KuromiGroupTitle"
                android:text="@string/bone_analysis" />

            <TextView
                android:id="@+id/tv_face_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="脸型: 菱形脸"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_cheekbone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颧骨: 高颧骨"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_jawline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下颌: 尖下颌"
                android:textColor="@color/text_white" />

            <TextView
                style="@style/KuromiGroupTitle"
                android:layout_marginTop="@dimen/margin_group"
                android:text="@string/temperament_score" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:theme="@style/Widget.AppCompat.RatingBar.Indicator" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
