<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep_purple"
    tools:context=".MainActivity">

    <!-- 星光背景 (需要一个 drawable) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/starlight_background_gradient" />

    <!-- 标题 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yanbao AI"
            android:textColor="@color/text_white"
            android:textSize="@dimen/font_size_title"
            android:textStyle="bold"
            android:shadowColor="@color/kuromi_pink"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_name"
            android:textColor="@color/kuromi_pink"
            android:textSize="@dimen/font_size_subtitle" />
    </LinearLayout>

    <!-- 星光轮盘 (自定义 View) -->
    <FrameLayout
        android:id="@+id/wheel_layout_container"
        android:layout_width="@dimen/wheel_diameter"
        android:layout_height="@dimen/wheel_diameter"
        android:layout_gravity="center"
        android:background="@drawable/wheel_background_shape">

        <!-- 中心库洛米头像 -->
        <ImageView
            android:id="@+id/iv_kuromi_avatar"
            android:layout_width="@dimen/wheel_avatar_diameter"
            android:layout_height="@dimen/wheel_avatar_diameter"
            android:layout_gravity="center"
            android:src="@drawable/ic_kuromi_avatar" />

        <!-- 8个按钮将由代码动态添加 -->

    </FrameLayout>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_take_photo"
            style="@style/KuromiButton.Purple"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:text="@string/take_photo" />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_gallery"
            style="@style/KuromiButton.Pink"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:text="@string/gallery" />

    </LinearLayout>

</FrameLayout>
