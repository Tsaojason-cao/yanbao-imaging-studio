<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_dark">

    <!-- 相机预览 (SurfaceView / TextureView) -->
    <SurfaceView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#00000080">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            android:tint="@color/text_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/camera_module"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            android:scaleType="centerInside"
            android:tint="@color/text_white" />

    </LinearLayout>

    <!-- 左侧参数显示 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#00000080"
        android:backgroundTint="#00000080">

        <TextView
            android:id="@+id/exposureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISO: 100"
            android:textSize="10sp"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/focusModeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对焦: 自动"
            android:textSize="10sp"
            android:textColor="@color/text_white"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/flashText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闪光: 关"
            android:textSize="10sp"
            android:textColor="@color/text_white" />

    </LinearLayout>

    <!-- 右侧参数快速调整 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#00000080">

        <!-- 感光度滑块 -->
        <SeekBar
            android:id="@+id/exposureSlider"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:rotation="270"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/kuromi_pink"
            android:layout_marginBottom="8dp" />

        <!-- 对比度滑块 -->
        <SeekBar
            android:id="@+id/contrastSlider"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:rotation="270"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/kuromi_pink"
            android:layout_marginBottom="8dp" />

        <!-- 饱和度滑块 -->
        <SeekBar
            android:id="@+id/saturationSlider"
            android:layout_width="40dp"
            android:layout_height="150dp"
            android:rotation="270"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/kuromi_pink" />

    </LinearLayout>

    <!-- 底部控制栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#00000080"
        android:paddingHorizontal="16dp">

        <!-- 闪光灯按钮 -->
        <ImageButton
            android:id="@+id/flashButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/flash"
            android:scaleType="centerInside"
            android:tint="@color/text_white"
            android:layout_marginEnd="32dp" />

        <!-- 快门按钮 -->
        <FrameLayout
            android:id="@+id/shutterButton"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <!-- 外圆（紫色） -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shutter_button_outer" />

            <!-- 内圆（粉色） -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/shutter_button_inner" />

        </FrameLayout>

        <!-- 切换摄像头按钮 -->
        <ImageButton
            android:id="@+id/flipCameraButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/flip_camera"
            android:scaleType="centerInside"
            android:tint="@color/text_white"
            android:layout_marginStart="32dp" />

    </LinearLayout>

</FrameLayout>
